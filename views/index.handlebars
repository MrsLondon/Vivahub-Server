<div class="container mx-auto px-4 py-8 max-w-6xl">
    <div class="bg-white rounded-2xl shadow-xl p-8">
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-2">Vivahub Data Viewer</h1>
        
        <div class="text-center bg-gray-50 rounded-xl p-6 mb-8">
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">✨ Welcome to Your Data Explorer! ✨</h2>
            <p class="text-gray-600">Click on any endpoint below to view your MongoDB data</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="endpoints">
            {{#each endpoints}}
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 transition-all hover:-translate-y-1 hover:shadow-lg">
                <h2 class="text-xl font-semibold text-gray-800 mb-2 flex items-center justify-between">
                    {{name}}
                    <span class="bg-blue-50 text-blue-600 px-3 py-1 rounded-full text-sm">{{count}}</span>
                </h2>
                <p class="text-gray-600 mb-4">{{description}}</p>
                <a href="{{path}}" class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-800">
                    View Data 
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
            {{/each}}
        </div>

        <footer class="mt-8 text-center text-gray-600 text-sm">
            <p>Vivahub Backend API • Made with ❤️</p>
        </footer>
    </div>
</div>
